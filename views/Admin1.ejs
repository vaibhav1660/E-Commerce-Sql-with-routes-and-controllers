<div class="row" id="productContainer">
    <% for(let i = 9 ;i < product.length ; i++){ %>
       <div class="col-md-4">
          <div class="card" style="width: 18rem;">
            <!-- <h1>"<%= product[i].image  %></h1> -->
              <img src="<%=product[i].image%>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= product[i].name   %></h5>
                <p class="card-text"><%= product[i].price  %></p>
                 <button class="btn btn-primary" data-toggle="modal" data-target="#m<%=product[i].id%>">Update</button> 
                <a href="/admindelete/<%=product[i].id%>" class="btn btn-primary">Delete</a>
              </div>
            </div>
          </div>

          <div class="modal fade" id="m<%=product[i].id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <img src=<%= product[i].image  %> class="card-img-top" alt="...">
                  <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                <!-- <p><%= product[i].details   %></p> -->

                <form action="/editupdate/<%= product[i].id%>" method="post" >
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Product Name:</label>
                      <input required type="text" class="form-control" id="pname" name="p1name"  aria-describedby="productname">
                     
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Product Description:</label>
                        <input required type="text" class="form-control" id="pdescription" name="p1description"  aria-describedby="productname">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Product Price:</label>
                        <input required type="number" class="form-control" id="pprice" name="p1price" aria-describedby="productprice">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Product Quantity:</label>
                        <input required type="text" class="form-control" id="pquantity" name="p1quantity"  aria-describedby="productquantity">
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                  </form>



                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  
                </div>
              </div>
            </div>
          </div>
                  
                <% } %>
        </div>
        <script>
            if(document.getElementById("productContainer").innerText.length<1){
        document.getElementById("productContainer").innerHTML="<h1>.      Your haven't added any item </h1>"
       };
        </script>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
